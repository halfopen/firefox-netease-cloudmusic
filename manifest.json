{

    "manifest_version": 2,
    "name": "firefox-netease-cloudmusic",
    "version": "0.0.1",
    "author": "halfopen@yeah.net",
    "description": "firefox-netease-cloudmusic",
    "icons": {
        "48": "imgs/default_music_pic_163.jpg"
    },
    "permissions": [
        "notifications",
        "storage",
        "webRequest",
        "tabs", 
        "activeTab", 
        "clipboardWrite", 
         "*://m1.music.126.net///*", 
         "*://m2.music.126.net///*", 
         "*://p1.music.126.net///*", 
         "*://p2.music.126.net///*", 
         "*://p3.music.126.net///*", 
         "*://p4.music.126.net///*", 
         "*://p5.music.126.net///*", 
         "*://p6.music.126.net///*", 
         "*://p7.music.126.net///*", 
         "*://p8.music.126.net///*", 
         "*://p9.music.126.net///*"
    ],

    "content_scripts": [{
        "matches": ["http://music.163.com/*"],
        "js": ["js/base.js","js/content.js"]
    }],

    "browser_action": {
        "default_icon": "imgs/default_music_pic_163.jpg",
        "default_title": "netease-cloudmusic",
        "default_popup": "template/popup.html"
    },

    "options_ui": {
        "page": "template/options.html"
    },

    "web_accessible_resources": [
        "imgs/loading.gif",
        "imgs/default_music_pic_163.jpg"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "applications": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "49.0",
            "strict_max_version": "50.*"
        }
    }

}