{

    "manifest_version": 2,
    "name": "netease-cloudmusic",
    "version": "1.0",
    "author": "halfopen@yeah.net",
    "description": "网易云音乐",
    "homepage_url": "https://github.com/halfopen/firefox-netease-cloudmusic",
    "icons": {
        "48": "imgs/default_music_pic_163.jpg"
    },

    "permissions": [
        "notifications",
        "storage",
        "webRequest"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/jquery-3.1.1.min.js", "js/content.js"]
    }],

    "browser_action": {
        "default_icon": "imgs/default_music_pic_163.jpg",
        "default_title": "网易云音乐",
        "default_popup": "template/popup.html"
    },

    "options_ui": {
        "page": "template/options.html"
    },

    "web_accessible_resources": [
        "imgs/loading.gif",
        "imgs/default_music_pic_163.jpg"
    ],
    "background": {
        "scripts": ["js/background.js"]
    }

}